<Window x:Class="KinectV2Gesture.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="480" Width="640">
    <Grid Width="auto" Height="auto">
        <Image x:Name="ImageColor" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" />
        <StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="1">
            <TextBlock x:Name="TextBlock1" FontSize="50" Foreground="Black" Text="No Gesture Found."/>
            <TextBlock x:Name="TextBlock2" FontSize="50" Foreground="Black" Text="Confidence: "/>
            <TextBlock x:Name="TextBlock3" FontSize="50" Foreground="Black"/>
        </StackPanel>
        <ProgressBar x:Name="ProgressBar1" HorizontalAlignment="Stretch" Height="30" VerticalAlignment="Bottom" Width="auto" Maximum="1"/>
    </Grid>
</Window>
